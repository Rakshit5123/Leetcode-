class Solution {
public:
    vector<int> findPeaks(vector<int>& mountain) {
        vector<int> targetindices;
        int n = mountain.size();
        if (n < 3) return targetindices;  

        for (int i = 1; i < n - 1; i++) { 
            if (mountain[i] > mountain[i - 1] && mountain[i] > mountain[i + 1]) {
                targetindices.push_back(i);
            }
        }
        return targetindices;
    }
};
